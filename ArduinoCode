#include <SPI.h>
#include <MFRC522.h>
#include <LiquidCrystal_I2C.h>

// RFID setup
#define SS_PIN 10
#define RST_PIN 9
MFRC522 rfid(SS_PIN, RST_PIN);

// LCD setup (16x2 I2C)
LiquidCrystal_I2C lcd(0x27, 16, 2);

// Buzzer and LED pins
int buzzer = 3;
int greenLED = 4;
int redLED = 5;

// Example authorized UIDs (hex values from RFID tags)
String authorizedUIDs[] = {
  "89 73 A4 1B",   // Example card 1
  "52 F1 3A 5C"    // Example card 2
};
int totalUIDs = sizeof(authorizedUIDs) / sizeof(authorizedUIDs[0]);

void setup() {
  Serial.begin(9600);
  SPI.begin();
  rfid.PCD_Init();

  lcd.init();
  lcd.backlight();

  pinMode(buzzer, OUTPUT);
  pinMode(greenLED, OUTPUT);
  pinMode(redLED, OUTPUT);

  lcd.setCursor(0, 0);
  lcd.print(" RFID Smart Sys ");
  lcd.setCursor(0, 1);
  lcd.print("   Ready...   ");
  delay(2000);
  lcd.clear();
}

void loop() {
  // Wait for RFID card
  if (!rfid.PICC_IsNewCardPresent() || !rfid.PICC_ReadCardSerial()) {
    return;
  }

  // Get UID as string
  String uidString = "";
  for (byte i = 0; i < rfid.uid.size; i++) {
    uidString += String(rfid.uid.uidByte[i] < 0x10 ? " 0" : " ");
    uidString += String(rfid.uid.uidByte[i], HEX);
  }
  uidString.toUpperCase();

  Serial.print("Card UID: ");
  Serial.println(uidString);

  // Check authorization
  bool authorized = false;
  for (int i = 0; i < totalUIDs; i++) {
    if (uidString.substring(1) == authorizedUIDs[i]) {
      authorized = true;
      break;
    }
  }

  if (authorized) {
    lcd.clear();
    lcd.setCursor(0, 0);
    lcd.print("Access Granted");
    digitalWrite(greenLED, HIGH);
    tone(buzzer, 1000, 200);
    delay(2000);
    digitalWrite(greenLED, LOW);
    Serial.println("Access logged: Authorized entry");
  } else {
    lcd.clear();
    lcd.setCursor(0, 0);
    lcd.print("Access Denied!");
    digitalWrite(redLED, HIGH);
    tone(buzzer, 500, 1000);
    delay(2000);
    digitalWrite(redLED, LOW);
    Serial.println("Access logged: Unauthorized attempt");
  }

  lcd.clear();
  lcd.setCursor(0, 0);
  lcd.print("   Ready...   ");

  rfid.PICC_HaltA();  // Stop reading
  rfid.PCD_StopCrypto1();
}
